

{{# if this.list }}
    <div class="row">
         <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">

            <h1>Aangeboden Jobs</h1>
            <br>

                {{#each list}}
                    <div class="panel panel-info">
                        <div class="panel-heading">
                        <h3>
                            <a style="color:#ffffff" data-toggle="collapse" data-parent="#mainVersion{{@index}}" href="#mainVersion{{@index}}">{{ this.name }}  <span style="border-left: 8px solid transparent;border-right: 8px solid transparent;border-top: 8px solid #ffffff;margin-top: 0px;" class="caret"></span></a>
                            <a href="/job-delete/{{ this._id }}"><i style="color:#ffffff; position: absolute;left: 90%" class="fa fa-trash-o" aria-hidden="true"></i></a>

                        </h3>

                        </div>
                        <!--hier info over het klusje-->
                        <div id="mainVersion{{@index}}" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <form action="/job-update/{{ this._id }}" method="post">
                                    <fieldset>
                                    <h4><b>Info:</b></h4>
                                    <textarea style="width: 100%;height: 100px;overflow: hidden;" name="info">{{this.info}}</textarea>


                                    <div id="location" style="float: left;">
                                        <h4><b>Locatie:</b></h4>
                                        {{# if location }}
                                            <input style="width: 400px" value="{{this.location}}" name="location">
                                        {{else}}
                                            <input style="width: 400px" value="{{this.geolocation}}" name="location">
                                        {{/if}}
                                    </div>

                                    <div style="float: right; padding-top: 30px;" class="radiobutton">
                                        <input type="radio" name="vrijwilligofbetalen" id="vrijwilliger" value="No" {{this.tovolunteer}}/><span style="padding-right: 50px"> Vrijwillig</span><br>
                                        <input type="radio" name="vrijwilligofbetalen" id="betalen" value="Yes" {{this.topay}} /><span style="padding-right: 50px"> Betaald </span>
                                        <input style="width: 50px" value="{{this.pay}}" name="pay"><span> â‚¬/uur</span>
                                    </div>
                                    </fieldset>
                                    <br>
                                    <fieldset style="text-align: center">
                                    <div style="display: inline-block;">
                                        <input id="wijzigjobgegevens" type="submit" value="Wijzig gegevens" class="btn btn-primary"/>
                                    </div>
                                    </fieldset>

                                </form>
                            </div>

                        </div>


                        <!--hier info over de kandidaten-->
                        <div class="panel-body">
                        {{# if candidates}}
                            <h4><b>Kandidaten:</b></h4>
                            {{#each candidates}}

                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#mainVersion{{@../index}}{{@index}}" href="#mainVersion{{@../index}}{{@index}}">{{this.firstname}} <span class="caret"></span></a>

                                                <a style=" position: absolute;left: 90%" href=""><i class="fa fa-comment-o" aria-hidden="true"></i></a>
                                                <a style=" position: absolute;left: 93%"href=""><i class="fa fa-trash-o" aria-hidden="true"></i></a>

                                        </h4>
                                    </div>
                                    <div id="mainVersion{{@../index}}{{@index}}" class="panel-collapse collapse in">
                                        <div class="panel-body">
                                            <p>{{this.info}}</p>
                                        </div>
                                        <div style="text-align: center">
                                            <a href="" class="btn btn-success btn-sm">Kies kandidaat!</a>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        {{else}}
                            <h4>Nog geen kandidaten ...</h4>
                        {{/if}}
                        </div>



                    </div>
                {{/each}}
        </div>
         </div>

{{ else }}
    <div class="row">
        <div class="col-lg-12 col-md-4 col-sm-6 col-lg-offset-0 col-md-offset-4 col-sm-offset-3">
            <h2>Nog geen jobs aangeboden!</h2>
        </div>
    </div>
{{/if}}



<script>
    $('.collapse').collapse();
</script>



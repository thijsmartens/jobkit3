<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <form action="/user/signup" method="post">
            <fieldset>
            <h1 class="form-group">Aanmelden</h1>
            <div class="form-group">
                <label for="firstname">Voornaam</label>
                <input type="firstname" id="firstname" class="form-control" name="firstname" required>
            </div>
            <div class="form-group">
                <label for="lastname">Familienaam</label>
                <input type="lastname" id="lastname" class="form-control" name="lastname" required>
            </div>
                <div class="form-group">
                    <label for="info">Vertel kort wat over jezelf...</label>
                    <textarea type="info" id="info" class="form-control" name="info" placeholder="Ervaring, hobby's, motivatie, ..." required></textarea>
                </div>
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="text" id="email" class="form-control" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Wachtwoord</label>
                <input type="password" id="password" class="form-control" name="password" required>
            </div>

            <div class="form-group">
                <label for="password">Herhaal wachtwoord</label>
                <input type="password" id="confirm_password" class="form-control" name="confirm_password" required>
            </div>
                {{#if hasErrors }}
                    <div class="alert alert-danger">
                        {{#each messages}}
                            <p>{{ this }}</p>
                        {{/each}}
                    </div>
                {{/if}}

            <div class="form-group">
            <button type="submit" class="btn btn-primary">Aanmelden</button>
            </div>
            <div class="form-group">
                <a href="/user/signin">Reeds een Account? Klik hier</a>
            </div>
            </fieldset>
        </form>
    </div>
</div>
